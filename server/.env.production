# Production Environment Configuration
# Copy this to .env for production deployment

# MongoDB Configuration - Use MongoDB Atlas for production
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/collegewebsite

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=production

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=./uploads

# Frontend URL for CORS - Update with your domain
CLIENT_URL=https://your-domain.com

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (if using email notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@domain.com
# EMAIL_PASS=your-app-password